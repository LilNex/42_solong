{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "gcc",
            "args": [
                "*.c",
                "assets/*.c",
                "gnl/*_bonus.c",
                "libft/libft.a",
                "-Lmlx",
                "-lmlx",
                "-framework",
                "OpenGL",
                "-framework",
                "AppKit",
                "-fsanitize=address",
                "-g",
                "-o",
                "so_long"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/gcc",
            "args": [
                "utils/sorter/u_sort.c",
                "utils/parser.c",
                "utils/parser.c",
                "utils/moves.c",
                "push_utils.c",
                "utils.c",
                "libft/libft.a",
                "ft_printf/libftprintf.a",
                "-fdiagnostics-color=always",
                "-g",
                "push_swap.c",
                "-o",
                "push_swap.out"
                // "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/gcc"
        }
    ],
    "version": "2.0.0"
}